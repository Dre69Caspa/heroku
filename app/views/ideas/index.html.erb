<h1>Listing ideas</h1>

<% @ideas.each do |idea| %>
<div class="row">
  <div class="span4">
    <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>
    <h4><%= link_to idea.name, idea %></h4>
    <%= idea.description %>
  </div>
<% end %>

<br />

<%= link_to 'New Idea', new_idea_path %>
